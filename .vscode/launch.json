    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Dev",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "outFiles": [
                "${workspaceFolder}/build/**/*.js",
                "${workspaceFolder}/build/**/*.js.map"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Dev With Secrets",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:with-secrets"
            ],
            "outFiles": [
                "${workspaceFolder}/build/**/*.js",
                "${workspaceFolder}/build/**/*.js.map"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
        }
    ]
}